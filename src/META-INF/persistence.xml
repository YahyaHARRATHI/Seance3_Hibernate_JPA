<?xml version="1.0" encoding="UTF-8"?>
<persistence:persistence version="2.0" xmlns:persistence="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd ">
  <persistence:persistence-unit name="JPAa">
  
  
  <persistence:provider>org.hibernate.ejb.HibernatePersistence</persistence:provider>
  
  <persistence:properties>
  <!-- connexion to database  
  javax.persistence.jdbc.driver       sont des attributs dans un classe nommÃ© PersistenceUnit
   -->
  <persistence:property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
  <persistence:property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/formations3"/>
  <persistence:property name="javax.persistence.jdbc.user" value="root"/>
  <persistence:property name="javax.persistence.jdbc.password" value=" "/>
  

  <persistence:property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
    <persistence:property name="hibernate.hbm2ddl" value="create"/>
  
  
  <!--  on lui dire de fetcher les annotations  dans les classes-->
  <persistence:property name="hibernate.archive.autodetection" value="class"/>
  
  <persistence:property name="hibernate.show_sql" value="true"/>
  </persistence:properties>
  
  </persistence:persistence-unit>
</persistence:persistence>
